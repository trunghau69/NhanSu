@model Employee.Models.ChuyenNganh
@{
    ViewData["title"] = "Thêm Mới Chuyên Ngành";
}

<div class="container mt-5">
    <h5 class="card-header text-center">@ViewData["Title"] </h5>

    <form asp-action="ThemMoi" method="post" class="w-50 mx-auto">
        <div class="form-group">
            <label for="MaChuyenNganh" class="font-weight-bold">Mã Chuyên Ngành</label>
            <input asp-for="MaChuyenNganh" class="form-control" placeholder="Nhập mã chuyên ngành..." />
            <span asp-validation-for="MaChuyenNganh" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="TenChuyenNganh" class="font-weight-bold">Tên chuyên ngành</label>
            <input asp-for="TenChuyenNganh" class="form-control" placeholder="Nhập tên chuyên ngành..." />
            <span asp-validation-for="TenChuyenNganh" class="text-danger"></span>
        </div>

        <!-- Dùng grid layout cho 2 nút nằm cùng hàng -->
        <div class="form-group ">
            <button type="submit" class="btn btn-success me-2">Thêm mới</button>
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

