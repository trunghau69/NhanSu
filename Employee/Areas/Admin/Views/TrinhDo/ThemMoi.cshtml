@model Employee.Models.TrinhDo
@{
    ViewData["title"] = "Thêm Mới Trình Độ";
}

<div class="container mt-5">
    <h5 class="card-header text-center">@ViewData["Title"] </h5>

    <form asp-action="ThemMoi" method="post" class="w-50 mx-auto">
        <div class="form-group">
            <label for="MaTrinhDo" class="font-weight-bold">Mã Trình Độ</label>
            <input asp-for="MaTrinhDo" class="form-control" placeholder="Nhập mã trình độ..." />
            <span asp-validation-for="MaTrinhDo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="TenTrinhDo" class="font-weight-bold">Tên Trình Độ</label>
            <input asp-for="TenTrinhDo" class="form-control" placeholder="Nhập tên trình độ..." />
            <span asp-validation-for="TenTrinhDo" class="text-danger"></span>
        </div>

        <!-- Dùng grid layout cho 2 nút nằm cùng hàng -->
        <div class="form-group ">
            <button type="submit" class="btn btn-success me-2">Thêm mới</button>
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

