@model Employee.Models.KhenThuong
@{
    ViewData["title"] = "Thêm Mới Khen Thưởng";
}

<div class="container mt-5">
    <h5 class="card-header text-center">@ViewData["Title"] </h5>

    <form asp-action="ThemMoi" method="post" class="w-50 mx-auto">
        <div class="form-group">
            <label for="MaKhenThuong" class="font-weight-bold">Mã Khen Thưởng</label>
            <input asp-for="MaKhenThuong" class="form-control" placeholder="Nhập mã khen thưởng..." />
            <span asp-validation-for="MaKhenThuong" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="LyDoKhenThuong" class="font-weight-bold">Lý Do</label>
            <input asp-for="LyDoKhenThuong" class="form-control" placeholder="Nhập lý do..." />
            <span asp-validation-for="LyDoKhenThuong" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="SoTienKhenThuong" class="font-weight-bold">Tiền Phạt</label>
            <input asp-for="TienThuong" class="form-control" placeholder="Nhập số tiền thưởng..." />
            <span asp-validation-for="TienThuong" class="text-danger"></span>
        </div>
        <!-- Dùng grid layout cho 2 nút nằm cùng hàng -->
        <div class="form-group ">
            <button type="submit" class="btn btn-success me-2">Thêm mới</button>
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
