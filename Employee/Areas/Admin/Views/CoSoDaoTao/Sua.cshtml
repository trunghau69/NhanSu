@model Employee.Models.CoSoDaoTao
@{
    ViewData["title"] = "Thêm Mới Phòng Ban";
}

<div class="container mt-5">
    <h5 class="card-header text-center">@ViewData["Title"] </h5>

    <form asp-action="Sua" method="post" class="w-50 mx-auto">
        <div class="form-group">
            <label for="MaCoSo" class="font-weight-bold">Mã Cơ Sở</label>
            <input asp-for="MaCoSo" class="form-control" placeholder="Nhập mã cơ sở..." />
            <span asp-validation-for="MaCoSo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="TenCoSo" class="font-weight-bold">Tên Cơ Sở</label>
            <input asp-for="TenCoSo" class="form-control" placeholder="Nhập tên cơ sở..." />
            <span asp-validation-for="TenCoSo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="DiaChi" class="font-weight-bold">Địa Chỉ</label>
            <input asp-for="DiaChi" class="form-control" placeholder="Nhập địa chỉ..." />
            <span asp-validation-for="DiaChi" class="text-danger"></span>
        </div>
        <!-- Dùng grid layout cho 2 nút nằm cùng hàng -->
        <div class="form-group ">
            <button type="submit" class="btn btn-success me-2">Lưu</button>
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}




