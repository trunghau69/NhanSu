@model IEnumerable<Employee.Models.NghiPhep>
@{
    ViewBag.Title = "Nghỉ phép";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="">
    <div class="mb-3">
        <h1 class="page-header text-center">Nghỉ Phép</h1>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="card shadow-lg">
        <div class="card-header d-flex justify-content-between align-items-center bg-primary text-white">
            
                

                <!-- Nút thêm mới -->
            <div class="d-flex justify-content-start">
                <a asp-area="Admin" asp-controller="NghiPhep" asp-action="ThemMoi" class="btn btn-primary btn-sm" style="padding: 2.5px 8px; font-size: 12px;>
                        <i class="fa fa-plus"></i> Thêm mới
                    </a>
                </div>
            </div>


        </div>
    <div class="card-body p-0">
        <table class="table table-hover table-striped table-bordered mb-0">
            <thead class="table-primary">
                    <tr>
                    <th class="text-center align-middle" style="width: 5%;">STT</th>
                    <th class="text-center align-middle" style="width: 20%;">Nhân viên</th>
                    <th class="text-center align-middle" style="width: 30%;">Ngày bắt đầu</th>
                    <th class="text-center align-middle" style="width: 15%;">Ngày kết thúc</th>
                    <th class="text-center align-middle" style="width: 15%;">Số Ngày</th>
                    <th class="text-center align-middle" style="width: 15%;">Lý do</th>
                    <th class="text-center align-middle" style="width: 15%;">Trạng thái</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = 1;
                        foreach (var item in Model)
                        {
                            <tr>
                            <td class="text-center align-middle">@i</td>
                            <td class="text-center align-middle">@item.NhanVien.TenNhanVien</td>
                            <td class="text-center align-middle">@item.NgayBatDau</td>
                            <td class="text-center align-middle">@item.NgayKetThuc</td>
                            <td class="text-center align-middle">@item.SoNgay</td>
                            <td class="text-center align-middle">@item.LyDo</td>
                            <td class="text-center align-middle">@item.TrangThai</td>
                            <td class="text-center align-middle">
                                    <a asp-area="Admin" asp-controller="NghiPhep" asp-action="Sua" asp-route-id="@item.ID" class="btn btn-warning btn-sm">
                                        <i class="fa fa-pencil-square-o" aria-hidden="true"></i> Sửa
                                    </a>
                                    <a asp-area="Admin" asp-controller="NghiPhep" asp-action="Xoa" asp-route-id="@item.ID" class="btn btn-danger btn-sm">
                                        <i class="fa fa-trash-o" aria-hidden="true"></i> Xóa
                                    </a>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td class="text-center" colspan="6">Không có bản ghi nào!</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
        <div class="card-footer"></div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->
</section>
<!-- /.content -->
