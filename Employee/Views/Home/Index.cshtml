@{
    ViewData["Title"] = "Trang Nhân Viên";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Thêm Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/layoutuser.css" />
</head>
<body>
    

    <!-- Main Content -->
    <div class="container mt-5 pt-5">
        <h3 class="text-center">Giao Diện Chính Nhân Viên</h3>
        <div class="row justify-content-center g-4">
            <div class="col-md-4">
                <a asp-controller="ThongTinCaNhan" asp-action="Index" class="text-decoration-none">
                    <div class="card p-4 text-center">
                        <div class="custom-icon">&#128100;</div>
                        <h5 class="card-title">Thông Tin Nhân Viên</h5>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <div class="card p-4 text-center">
                    <div class="custom-icon">&#128176;</div>
                    <h5 class="card-title">Lương Nhân Viên</h5>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-4 text-center">
                    <div class="custom-icon">&#128274;</div>
                    <h5 class="card-title">Tài Khoản Nhân Viên</h5>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-4 text-center">
                    <div class="custom-icon">&#127942;</div>
                    <h5 class="card-title">Khen Thưởng - Kỷ Luật</h5>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-4 text-center">
                    <div class="custom-icon">&#128197;</div>
                    <h5 class="card-title">Nghỉ Phép</h5>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-4 text-center">
                    <div class="custom-icon">&#128221;</div>
                    <h5 class="card-title">Hợp Đồng</h5>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
